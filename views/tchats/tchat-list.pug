if tchats
  each tchat in tchats
    div(class="card tchat-element")
      div(class="card-body d-flex flex-column")
        div(class="d-flex flex-row align-items-center pb-2")
          img(width="40" height="40" class="pr-3" src=tchat.author.avatar)
          span(class="flex-fill")= tchat.author.username
          if editable && tchat.author._id.toString() === currentUser._id.toString()
            div(class="d-flex flex-row justify-content-center")
              a(class="fas fa-edit pr-2 text-success" href="/tchats/edit/" + tchat._id)
              i(class="fas fa-minus-circle text-danger pointer-cursor" tchatid=tchat._id)
        div= tchat.content