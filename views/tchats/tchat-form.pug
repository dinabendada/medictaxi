extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="flex-fill")
      form(class="card" method="post" action= tchat._id ? "/tchats/update/" + tchat._id : "/tchats")
        div(class="card-header") Ecrire un tchat
        div(class="card-body")
          div(class="form-group")
            textarea(class="form-control" name="content" placeholder="What is happening")= tchat.content
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100")
            input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")