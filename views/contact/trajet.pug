extends ../layout

block content
  div(class="d-flex flex-row content justify-content-center mx-auto")
    form(class="card w-50 mt-5" method="post" action="/reservation/reservation")
      div(class="card-header") Reservation
      div(class="card-body")
        div(class="form-group")
          label Nom
          input(class="form-control" type="text" name="nom")
        div(class="form-group")
          label Prenom
          input(class="form-control" type="text" name="prenom")
          div(class="form-group")
          label Adresse de depart
          input(class="form-control" type="text" name="adress")
          div(class="form-group")
          label Point d'arrivage
          input(class="form-control" type="text" name="arrivage")
        div(class="form-group")
          label Email
          input(class="form-control" type="email" name="email")
        div(class="form-group")
          label Telephone
          input(class="form-control" type="phone" name="phone")
        if errors
          ul(class="my-2")
            each error in errors
              li(class="text-danger")= error  
        div(class="w-100")
          input(type="submit" value="valider" class="btn btn-primary ml-auto d-block")